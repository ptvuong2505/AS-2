<Window x:Class="PhanThanhVuongWPF.AdminViewModel.AddRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Room" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F8F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Add New Room" FontSize="20" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,16" Grid.Row="0" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Room Number:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtRoomNumber" Grid.Row="0" Grid.Column="1" Margin="0,4" Height="28"/>

            <TextBlock Text="Room Type:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <ComboBox x:Name="cmbRoomType" Grid.Row="1" Grid.Column="1" Margin="0,4" Height="28"
                      DisplayMemberPath="RoomTypeName" SelectedValuePath="RoomTypeId"/>

            <TextBlock Text="Description:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtRoomDescription" Grid.Row="2" Grid.Column="1" Margin="0,4" Height="28"/>

            <TextBlock Text="Max Capacity:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtRoomMaxCapacity" Grid.Row="3" Grid.Column="1" Margin="0,4" Height="28"/>

            <TextBlock Text="Price:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtRoomPrice" Grid.Row="4" Grid.Column="1" Margin="0,4" Height="28"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="addRoom" Content="Add Room" Width="90" Height="32" Margin="0,0,8,0" Click="btnAddRoom_Click" Background="#2196F3" Foreground="White"/>
            <Button Content="Cancel" Width="70" Height="32" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
