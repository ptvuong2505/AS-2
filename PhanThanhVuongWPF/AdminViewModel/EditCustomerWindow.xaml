<Window x:Class="PhanThanhVuongWPF.AdminViewModel.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Customer" Height="420" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F8F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Edit Customer" FontSize="18" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,16" Grid.Row="0" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Full Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="0,4" Height="26"/>

            <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="0,4" Height="26"/>

            <TextBlock Text="Phone:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="0,4" Height="26"/>

            <TextBlock Text="Birthday:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <DatePicker x:Name="dpBirthday" Grid.Row="3" Grid.Column="1" Margin="0,4" Height="26"/>

            <TextBlock Text="Status:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <ComboBox x:Name="cmbStatus" Grid.Row="4" Grid.Column="1" Margin="0,4" Height="26">
                <ComboBoxItem Content="Active" />
                <ComboBoxItem Content="Inactive" />
            </ComboBox>

            <TextBlock Text="Password:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,4"/>
            <PasswordBox x:Name="txtPassword" Grid.Row="5" Grid.Column="1" Margin="0,4" Height="26"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSaveCustomer" Content="Save" Width="80" Height="30" Margin="0,0,8,0" Click="btnSaveCustomer_Click" Background="#2196F3" Foreground="White"/>
            <Button Content="Cancel" Width="70" Height="30" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
