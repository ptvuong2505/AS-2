<Window x:Class="PhanThanhVuongWPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhanThanhVuongWPF"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Hotel 247" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="btnBooking" 
                       Content="Booking" 
                       Visibility="Visible" 
                       Click="btnBooking_Click"
                       Margin="0,0,10,0"
                       Padding="15,8"
                       Background="#A23B72"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8B2F5F"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" x:Name="btnProfile" 
                       Content="Profile" 
                       Click="btnProfile_Click"
                       Padding="15,8"
                       Background="#F18F01"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D17A01"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnLogout" Content="Logout" 
        HorizontalAlignment="Right" VerticalAlignment="Top" 
        Margin="0,10,10,0" Width="80" Height="32" 
        Background="#F44336" Foreground="White"
        Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <!-- DataGrid for Bookings -->
            <DataGrid x:Name="dataGridBookings" 
                     AutoGenerateColumns="True" 
                     RowDetailsVisibilityMode="VisibleWhenSelected" 
                     Visibility="Visible" 
                     SelectionChanged="dataGridBookings_SelectionChanged"
                     Background="White"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#F5F5F5"
                     RowBackground="White"
                     FontSize="12">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </DataGrid.Style>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2E86AB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="#2E86AB"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border Background="#F9F9F9" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                            <StackPanel>
                                <TextBlock Text="Booking Details" 
                                          FontWeight="Bold" 
                                          FontSize="14"
                                          Foreground="#2E86AB"
                                          Margin="0,0,0,10"/>
                                <DataGrid x:Name="dataGridBookingDetails" 
                                         AutoGenerateColumns="True" 
                                         ItemsSource="{Binding BookingDetails}"
                                         Background="White"
                                         GridLinesVisibility="Horizontal"
                                         HeadersVisibility="Column"
                                         AlternatingRowBackground="#F0F8FF"
                                         RowBackground="White"
                                         FontSize="11">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#A23B72"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="8,6"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>

            <!-- Profile Panel -->
            <Border x:Name="Profile" 
                   Visibility="Collapsed"
                   Background="White"
                   BorderBrush="#E0E0E0"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="30"
                   MaxWidth="400"
                   MaxHeight="400"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Profile Header -->
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Your Profile" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#2E86AB"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        <Button x:Name="btnCloseProfile" 
                               Content="✕" 
                               Click="btnCloseProfile_Click"
                               HorizontalAlignment="Right"
                               Width="30" Height="30"
                               Background="#FF4444"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="14"
                               FontWeight="Bold"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="15">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#CC3333"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!-- Profile Information -->
                    <StackPanel>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Full Name:" FontWeight="SemiBold" Foreground="#666" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding CustomerFullName}" FontSize="14" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#666" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding EmailAddress}" FontSize="14" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Phone:" FontWeight="SemiBold" Foreground="#666" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding Telephone}" FontSize="14" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="#666" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding CustomerStatus}" FontSize="14" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Birthday:" FontWeight="SemiBold" Foreground="#666" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding CustomerBirthday}" FontSize="14" Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>