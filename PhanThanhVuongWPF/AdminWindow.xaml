<Window x:Class="PhanThanhVuongWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="1000"
        Background="#F5F7FA" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F0F4F8"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
        </Style>
        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1565C0"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="Admin Dashboard" FontSize="32" FontWeight="Bold" Foreground="#1976D2" Margin="30,20,0,10"/>
            <Grid Margin="30,20,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Admin Dashboard" FontSize="32" FontWeight="Bold" Foreground="#1976D2" VerticalAlignment="Center"/>
                <Button x:Name="btnLogout" Content="Logout" Style="{StaticResource ModernButton}" Background="#F44336" Foreground="White"
            Click="btnLogout_Click" Grid.Column="1" Padding="16,6" Margin="20,0,0,0"/>
            </Grid>
            <TabControl Margin="20,0,20,20" Background="Transparent" SelectionChanged="TabControl_SelectionChanged">
                <!-- Room Management -->
                <TabItem Header="Room Management">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Room Management" Style="{StaticResource SectionHeader}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="Add Room" Style="{StaticResource ModernButton}" Click="addRoomWindow_Open"/>
                                <Button x:Name="btnEditRoom" Content="Edit Room" Style="{StaticResource ModernButton}" Click="btnEditRoom_Click" Visibility="Collapsed"/>
                                <Button x:Name="btnDeleteRoom" Content="Delete Room" Style="{StaticResource ModernButton}" Background="#F44336" Click="btnDeleteRoom_Click" Visibility="Collapsed"/>
                            </StackPanel>
                            <DataGrid x:Name="dataGridRooms" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" Height="260"
                                      SelectionMode="Single" SelectionChanged="dataGridRooms_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="*"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RoomType.RoomTypeName}" Width="*"/>
                                    <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding RoomPricePerDay}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </TabItem>
                <!-- Booking Management -->
                <TabItem Header="Booking Management" RenderTransformOrigin="-2.278,7.53">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Booking Management" Style="{StaticResource SectionHeader}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="View Available Rooms" Style="{StaticResource ModernButton}" Background="#4CAF50" Click="btnViewAvailableRoom_Click"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock x:Name="txtTotalBooking" FontWeight="Bold" FontSize="15" Foreground="#333" Margin="0,0,30,0"/>
                                <TextBlock x:Name="txtAvailableRoom" FontWeight="Bold" FontSize="15" Foreground="#333"/>
                            </StackPanel>
                            <DataGrid x:Name="dataGridBookings" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" Height="260"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="*"/>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding BookingReservation.Customer.CustomerFullName}" Width="*"/>
                                    <DataGridTextColumn Header="Room" Binding="{Binding RoomInformation.RoomNumber}" Width="*"/>
                                    <DataGridTextColumn Header="Check In" Binding="{Binding StartDate}" Width="*"/>
                                    <DataGridTextColumn Header="Check Out" Binding="{Binding EndDate}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </TabItem>
                <!-- Customer Management -->
                <TabItem Header="Customer Management">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Customer Management" Style="{StaticResource SectionHeader}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="Add Customer" Style="{StaticResource ModernButton}" Click="addCustomerWindow_Open"/>
                                <Button x:Name="btnEditCustomer" Content="Edit Customer" Style="{StaticResource ModernButton}" Click="btnEditCustomer_Click" Visibility="Collapsed"/>
                                <Button x:Name="btnDeleteCustomer" Content="Delete Customer" Style="{StaticResource ModernButton}" Background="#F44336" Click="btnDeleteCustomer_Click" Visibility="Collapsed"/>
                            </StackPanel>
                            <DataGrid x:Name="dataGridCustomers" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" Height="260"
                                      SelectionMode="Single" SelectionChanged="dataGridCustomers_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="*"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                                    <DataGridTextColumn Header="Phone" Binding="{Binding Telephone}" Width="*"/>
                                    <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday}" Width="*"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding CustomerStatus}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </StackPanel>
    </ScrollViewer>
</Window>
